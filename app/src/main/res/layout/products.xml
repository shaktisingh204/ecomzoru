<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:gravity="center_horizontal|center_vertical"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">
    <aglibs.loading.skeleton.layout.SkeletonRelativeLayout
        android:id="@+id/skeletonLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        app:clipToText="false">
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:gravity="center_horizontal|center_vertical"
            android:paddingHorizontal="8dp"
            android:background="@drawable/roundb"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="8dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/shop"
                android:scaleType="fitCenter"/>
        </LinearLayout>
    </aglibs.loading.skeleton.layout.SkeletonRelativeLayout>
    </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Rise packet with protin"
                android:lines="2"
                android:paddingHorizontal="8dp"
                android:fontFamily="@font/okra_semibold"
                android:textSize="12sp"
                android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingHorizontal="8dp"
        android:orientation="horizontal">
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Rs100"
                android:lines="1"
                android:layout_weight="1"
                android:fontFamily="@font/okra_medium"
                android:textSize="16sp"
                android:textColor="@color/base1"/>
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_vertical|end"
            android:background="@drawable/round">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="buy"
                android:lines="1"
                android:fontFamily="@font/okra_semibold"
                android:textSize="16sp"
                android:textColor="@color/base1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>